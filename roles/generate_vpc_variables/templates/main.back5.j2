    - {{ vpc_interfaces }}
{%          endfor %}
  nve_loopbacks:
    - interface: {{ underlay["nve_loopbacks"][0]["interface"]Â }}
      ipaddress_secondary: {{ vtep_anycast[vpcid]["ip"] }}
      mask: {{ vtep_anycast[vpcid]["mask"] }}
{%       endif %}
{%    endif %}
{% endfor %}

